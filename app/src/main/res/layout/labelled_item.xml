<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.spaceandjonin.mycrd.utils.ExtensionsKt" />

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.spaceandjonin.mycrd.models.LabelDetail" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/actions"
            layout="@layout/labelled_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/background"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/heading"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/heading"
            labelledDrawableResource="@{item}" />

        <TextView
            android:id="@+id/heading"
            style="@style/TextAppearance.MyCardStyles.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="@{item.parentLabel.empty?item.label:item.parentLabel}"
            android:textAlignment="textStart"

            app:layout_constraintBottom_toTopOf="@+id/role"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/background"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/phone" />

        <TextView
            android:id="@+id/role"
            style="@style/TextAppearance.MyCardStyles.Body.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="marquee"
            android:text="@{item.detail}"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@+id/type"
            app:layout_constraintEnd_toEndOf="@+id/heading"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/heading"
            app:layout_constraintTop_toBottomOf="@+id/heading"
            tools:text="Senior Android Dev" />

        <TextView
            android:id="@+id/type"
            style="@style/TextAppearance.MyCardStyles.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:visibility="@{item.parentLabel.empty?View.GONE:View.VISIBLE}"
            android:text="@{item.parentLabel.empty?item.parentLabel:item.label}"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/actions"
            app:layout_constraintEnd_toEndOf="@+id/role"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/background"
            app:layout_constraintTop_toBottomOf="@+id/role"
            tools:text="Nate Att" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/heading"
            app:layout_constraintStart_toStartOf="@+id/heading"
            app:layout_constraintTop_toBottomOf="@+id/actions"
            tools:listitem="@layout/card_phone_item_additional" />
        <!--
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/phone"
            app:tint="@android:color/white" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>