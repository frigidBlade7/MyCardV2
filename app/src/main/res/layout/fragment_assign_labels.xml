<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.spaceandjonin.mycrd.viewmodel.ReviewScannedDetailsViewModel" />

        <import type="com.spaceandjonin.mycrd.utils.Utils" />

        <import type="com.spaceandjonin.mycrd.models.PhoneNumber.PhoneNumberType" />

        <import type="com.spaceandjonin.mycrd.models.EmailAddress.EmailType" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:text="@{viewmodel.selectedDetail}"
            app:layout_constraintBottom_toTopOf="@+id/view7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView21"
            style="@style/TextAppearance.MyCardStyles.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="@{viewmodel.selectedLabel==Utils.UNLABELLED?@string/unlabelled:viewmodel.selectedLabelType.empty?viewmodel.selectedLabel:@string/label_with_type(viewmodel.selectedLabelType,viewmodel.selectedLabel)}"
            app:layout_constraintBottom_toTopOf="@+id/textView20"
            app:layout_constraintEnd_toEndOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/handle" />

        <ImageView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/handle"
            app:layout_constraintBottom_toTopOf="@+id/textView21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/handle" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/full_divider"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="128dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="24dp" />

                <TextView
                    android:id="@+id/textView19"
                    style="@style/TextAppearance.MyCardStyles.Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:text="@string/assign_a_label"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView22"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView22"
                    style="@style/TextAppearance.MyCardStyles.Body.Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/personal_info"
                    app:layout_constraintBottom_toTopOf="@+id/full_name_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                <TextView
                    android:id="@+id/full_name_label"
                    style="@style/TextAppearance.MyCardStyles.Body.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/full_name"
                    android:visibility="@{viewmodel.card.name.fullName.empty?View.VISIBLE: View.GONE}"
                    app:drawableStartCompat="@drawable/name_label"
                    app:layout_constraintBottom_toTopOf="@+id/phone_number_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView22" />

                <TextView
                    android:id="@+id/phone_number_label"
                    style="@style/TextAppearance.MyCardStyles.Body.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:onClick="@{()->viewmodel.togglePhoneOptionsVisibility()}"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/phone_number"
                    app:drawableStartCompat="@drawable/phone_label"
                    app:layout_constraintBottom_toTopOf="@+id/phone_options"
                    app:layout_constraintEnd_toStartOf="@+id/togglePhoneButton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/full_name_label" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/phone_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/phone_types"
                    android:nestedScrollingEnabled="false"
                    android:visibility="@{viewmodel.phoneOptionsToggle?View.VISIBLE:View.GONE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@+id/email_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_label"
                    tools:listitem="@layout/social_display_item" />


                <TextView
                    android:id="@+id/email_label"
                    style="@style/TextAppearance.MyCardStyles.Body.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:onClick="@{()->viewmodel.toggleEmailOptionsVisibility()}"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/email_address"
                    app:drawableStartCompat="@drawable/mail_label"
                    app:layout_constraintBottom_toTopOf="@+id/email_options"
                    app:layout_constraintEnd_toStartOf="@+id/toggleEmailButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_options" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/email_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/email_types"
                    android:nestedScrollingEnabled="false"
                    android:visibility="@{viewmodel.emailOptionsToggle?View.VISIBLE:View.GONE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@+id/textView23"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_label"
                    tools:listitem="@layout/social_display_item" />


                <TextView
                    android:id="@+id/textView23"
                    style="@style/TextAppearance.MyCardStyles.Body.Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/work_info"
                    app:layout_constraintBottom_toTopOf="@+id/company_name_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/email_options" />

                <TextView
                    android:id="@+id/company_name_label"
                    style="@style/TextAppearance.MyCardStyles.Body.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/company_name"
                    android:visibility="@{viewmodel.card.businessInfo.companyName.empty?View.VISIBLE: View.GONE}"
                    app:drawableStartCompat="@drawable/company_name_label"
                    app:layout_constraintBottom_toTopOf="@+id/role_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23" />

                <TextView
                    android:id="@+id/role_label"
                    style="@style/TextAppearance.MyCardStyles.Body.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/role"
                    android:visibility="@{viewmodel.card.businessInfo.role.empty?View.VISIBLE: View.GONE}"
                    app:drawableStartCompat="@drawable/role_label"
                    app:layout_constraintBottom_toTopOf="@+id/location_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/company_name_label" />

                <TextView
                    android:id="@+id/location_label"
                    style="@style/TextAppearance.MyCardStyles.Body.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/work_location"
                    android:visibility="@{viewmodel.card.businessInfo.companyAddress.empty?View.VISIBLE: View.GONE}"
                    app:drawableStartCompat="@drawable/location_label"
                    app:layout_constraintBottom_toTopOf="@+id/website_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/role_label" />

                <TextView
                    android:id="@+id/website_label"
                    style="@style/TextAppearance.MyCardStyles.Body.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/website"
                    android:visibility="@{viewmodel.card.businessInfo.website.empty?View.VISIBLE: View.GONE}"
                    app:drawableStartCompat="@drawable/website_label"
                    app:layout_constraintBottom_toTopOf="@+id/textView24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/location_label" />


                <TextView
                    android:id="@+id/textView24"
                    style="@style/TextAppearance.MyCardStyles.Body.Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/socials"
                    app:layout_constraintBottom_toTopOf="@+id/social_options"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/website_label" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/social_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView24"
                    tools:listitem="@layout/social_display_item" />

                <com.spaceandjonin.mycrd.view.ToggleImageButton
                    android:id="@+id/togglePhoneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->viewmodel.togglePhoneOptionsVisibility()}"
                    android:padding="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/phone_number_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/phone_number_label"
                    app:layout_constraintTop_toTopOf="@+id/phone_number_label"
                    app:selected="@{viewmodel.phoneOptionsToggle}"
                    app:srcCompat="@drawable/chevron" />

                <com.spaceandjonin.mycrd.view.ToggleImageButton
                    android:id="@+id/toggleEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->viewmodel.toggleEmailOptionsVisibility()}"
                    android:padding="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/email_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/email_label"
                    app:layout_constraintTop_toTopOf="@+id/email_label"
                    app:selected="@{viewmodel.emailOptionsToggle}"
                    app:srcCompat="@drawable/chevron" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>