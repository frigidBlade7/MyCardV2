<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_nav"
    app:startDestination="@id/cardsFragment">

    <fragment
        android:id="@+id/viewCardDetailsFragment"
        android:label=""
        android:name="com.codedevtech.mycardv2.fragments.onboarding.ViewCardDetailsFragment"
        tools:layout="@layout/fragment_card_details">
        <argument
            android:name="card"
            android:defaultValue="@null"
            app:argType="com.codedevtech.mycardv2.models.Card"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/cardsFragment"
        android:name="com.codedevtech.mycardv2.fragments.dashboard.CardsFragment"
        tools:layout="@layout/cards_fragment"
        android:label="@string/cards" >
        <action
            android:id="@+id/action_cardsFragment_to_viewCardDetailsFragment"
            app:destination="@id/viewCardDetailsFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/meFragment"
        tools:layout="@layout/me_fragment"
        android:name="com.codedevtech.mycardv2.fragments.dashboard.MeFragment"
        android:label="@string/me" />
</navigation>