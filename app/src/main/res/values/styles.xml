    <style name="Theme.MyCardStyles.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="cornerFamily">rounded</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>


    <style name="Pin" parent="PinWidget.PinView">

        <item name="viewType">rectangle</item>
        <item name="lineWidth">0dp</item>
        <item name="android:itemBackground">@color/mc_black_5</item>
        <item name="hideLineWhenFilled">true</item>
        <item name="itemCount">6</item>
        <item name="itemHeight">48dp</item>
        <item name="itemTextAppearance">@style/TextAppearance.MyCardStyles.Body.Body</item>
        <item name="android:cursorVisible">false</item>
        <item name="itemWidth">39dp</item>
        <item name="itemRadius">8dp</item>
        <item name="itemSpacing">8dp</item>
    </style>

    <style name="Widget.MyCard.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingStart">8dp</item>
    </style>
