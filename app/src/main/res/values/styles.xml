<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:actionMenuTextColor">?attr/colorPrimary</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance.MyCardStyles.Body.Semibold</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/mc_purple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearance.MyCardStyles.Headline1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">32sp</item>
        <item name="color">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ShapeAppearance.MyCardStyles.Fab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="tint">@android:color/white</item>
        <item name="backgroundTint">@color/mc_purple</item>
    </style>

    <style name="TextAppearance.MyCardStyles.Subtitle.Regular" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="lineHeight">22sp</item>
        <item name="color">@color/mc_black_60</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MyCardStyles.Body.Semibold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">24sp</item>
        <item name="color">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MyCardStyles.Body.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="fontWeight">700</item>
        <item name="lineHeight">24sp</item>
        <item name="color">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MyCardStyles.Button.RoundedButton.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.MyCardStyles.Body.Semibold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.MyCardStyles.MaterialButtonToggleGroup" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">

    </style>

    <style name="Widget.MyCardStyles.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyCardStyles.Body.Semibold</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="Widget.MyCardStyles.Button.RoundedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyCardStyles.Body.Semibold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.MyCardStyles.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.MyCardStyles.Body.Semibold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>